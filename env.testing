# ===========================================
# PriceSnap API - Variables de Entorno TESTING
# ===========================================

# Entorno de ejecución
NODE_ENV=test
STAGE=test
PORT=3001

# ===========================================
# Base de Datos PostgreSQL para Testing
# ===========================================

# Configuración de base de datos para testing
DB_HOST=localhost
DB_PORT=5434
DB_NAME=pricesnap_test
DB_USER=pricesnap_user
DB_PASSWORD=pricesnap_password

# URL completa de conexión (alternativa)
DATABASE_URL=postgresql://pricesnap_user:pricesnap_password@localhost:5434/pricesnap_test

# ===========================================
# Redis - Cache y Colas para Testing
# ===========================================

# Configuración de Redis para testing
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6380

# ===========================================
# Autenticación JWT para Testing
# ===========================================

# Configuración JWT para testing
JWT_SECRET=test-jwt-secret-key-for-testing-only
JWT_EXPIRES_IN=1h

# ===========================================
# Encriptación
# ===========================================

# Clave de encriptación (32 bytes en hexadecimal)
ENCRYPT_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef
JWT_REFRESH_SECRET=test-refresh-secret-key-for-testing-only
JWT_REFRESH_EXPIRES_IN=24h

# ===========================================
# Stripe - Pagos y Suscripciones para Testing
# ===========================================

# Claves de Stripe para testing (usar test keys)
STRIPE_SECRET_KEY=sk_test_testing_key
STRIPE_PUBLISHABLE_KEY=pk_test_testing_key
STRIPE_WEBHOOK_SECRET=whsec_testing_secret

# Productos de Stripe para testing
STRIPE_STARTER_PLAN_ID=price_starter_monthly_test
STRIPE_GROWTH_PLAN_ID=price_growth_monthly_test
STRIPE_PRO_PLAN_ID=price_pro_monthly_test

# ===========================================
# Email - Notificaciones SMTP para Testing
# ===========================================

# Configuración SMTP para testing (usar servicio de testing)
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=test_user
SMTP_PASS=test_password
SMTP_FROM=test@pricesnap.test

# ===========================================
# Scraping y Workers para Testing
# ===========================================

# User Agent para scraping en testing
SCRAPING_USER_AGENT=Mozilla/5.0 (Test Browser) AppleWebKit/537.36

# Configuración de proxies para testing (deshabilitado)
PROXY_ROTATION_ENABLED=false
PROXY_LIST_URL=
PROXY_USERNAME=
PROXY_PASSWORD=

# Límites de scraping para testing (más permisivos)
SCRAPING_RATE_LIMIT=1000
SCRAPING_DELAY_MIN=100
SCRAPING_DELAY_MAX=500

# ===========================================
# Configuración de Aplicación para Testing
# ===========================================

# URLs de la aplicación para testing
APP_URL=http://localhost:3001
FRONTEND_URL=http://localhost:4201

# Configuración de CORS para testing
CORS_ORIGIN=http://localhost:4201

# Límites de archivos para testing
MAX_FILE_SIZE=1048576
UPLOAD_PATH=./test-uploads

# ===========================================
# Logging y Debug para Testing
# ===========================================

# Nivel de logging para testing
LOG_LEVEL=error

# Debug mode para testing
DEBUG=

# ===========================================
# Configuración de Planes (Límites) para Testing
# ===========================================

# Límites por plan - Starter (más permisivos para testing)
STARTER_PRODUCTS_LIMIT=1000
STARTER_COMPETITORS_LIMIT=10
STARTER_SCRAPING_FREQUENCY=daily
STARTER_ON_DEMAND_LIMIT=100

# Límites por plan - Growth (más permisivos para testing)
GROWTH_PRODUCTS_LIMIT=1000
GROWTH_COMPETITORS_LIMIT=10
GROWTH_SCRAPING_FREQUENCY=daily
GROWTH_ON_DEMAND_LIMIT=100

# Límites por plan - Pro (más permisivos para testing)
PRO_PRODUCTS_LIMIT=1000
PRO_COMPETITORS_LIMIT=10
PRO_SCRAPING_FREQUENCY=daily
PRO_ON_DEMAND_LIMIT=100

# ===========================================
# Configuración de Seguridad para Testing
# ===========================================

# Rate limiting para testing (más permisivo)
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=10000

# Configuración de sesiones para testing
SESSION_SECRET=test-session-secret-for-testing-only

# ===========================================
# Configuración de Testing
# ===========================================

# Sincronización de base de datos para testing
DB_SYNCHRONIZE=true

# Pool de conexiones para testing
DB_POOL_SIZE=5
DB_POOL_MAX=10
DB_POOL_MIN=1

# ===========================================
# Configuración de Workers para Testing
# ===========================================

# Número de workers para scraping en testing
SCRAPING_WORKERS_COUNT=1

# Configuración de colas para testing
QUEUE_CONCURRENCY=1
QUEUE_MAX_ATTEMPTS=1
QUEUE_BACKOFF_DELAY=1000

# ===========================================
# Configuración de Cache para Testing
# ===========================================

# TTL del cache para testing
CACHE_TTL=60
CACHE_MAX_SIZE=100

# ===========================================
# Configuración de Mock Services
# ===========================================

# Usar servicios mock para testing
MOCK_STRIPE=true
MOCK_EMAIL=true
MOCK_SCRAPING=true

# ===========================================
# Configuración de Test Data
# ===========================================

# Datos de prueba
TEST_USER_EMAIL=test@pricesnap.com
TEST_USER_PASSWORD=testpassword123
TEST_ADMIN_EMAIL=admin@pricesnap.com
TEST_ADMIN_PASSWORD=adminpassword123

# ===========================================
# Configuración de Timeouts para Testing
# ===========================================

# Timeouts más cortos para testing
REQUEST_TIMEOUT=5000
SCRAPING_TIMEOUT=10000
EMAIL_TIMEOUT=3000

# ===========================================
# Configuración de Cleanup
# ===========================================

# Limpieza automática de datos de testing
CLEANUP_ENABLED=true
CLEANUP_INTERVAL=3600000

# ===========================================
# Notas de Configuración
# ===========================================

# 1. Este archivo es para TESTING únicamente
# 2. Usar base de datos separada para testing
# 3. Configuraciones más permisivas para facilitar testing
# 4. Usar servicios mock cuando sea posible
# 5. Configurar cleanup automático de datos de testing
# 6. Timeouts más cortos para testing rápido
# 7. Logging mínimo para evitar ruido en tests
# 8. Usar datos de prueba predefinidos
